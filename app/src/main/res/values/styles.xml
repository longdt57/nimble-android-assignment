<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/defaultToolBar</item>
        <item name="android:windowBackground">@drawable/overlay</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.Authentication" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/nb_background</item>
    </style>

    <style name="defaultToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_left_white</item>
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="NB_EditText" parent="@style/N17R">
        <item name="android:layout_height">@dimen/field_height_56</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_radius12_white18</item>
        <item name="android:textColorHint">@color/white_30</item>
        <item name="android:paddingStart">@dimen/dimen_12</item>
        <item name="android:paddingEnd">@dimen/dimen_12</item>
        <item name="android:textCursorDrawable">@drawable/cursor_input_field</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PrimaryButton" parent="N17SB">
        <item name="android:layout_height">@dimen/button_height_56</item>
        <item name="android:background">@drawable/bg_corner_10</item>
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Authentication" />

    <style name="Authentication.Logo" parent="Authentication">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_100</item>
        <item name="srcCompat">@drawable/ic_logo_white</item>
    </style>

    <style name="Survey" />

    <style name="Survey.Profile" parent="Survey">
        <item name="android:layout_width">@dimen/home_avatar_size</item>
        <item name="android:layout_height">@dimen/home_avatar_size</item>
        <item name="android:layout_marginTop">@dimen/dimen_56</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
    </style>

    <style name="Survey.CoverImage" parent="Survey">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
