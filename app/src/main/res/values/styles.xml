<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NB_EditText" parent="@style/N17R">
        <item name="android:layout_height">@dimen/field_height_56</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_field</item>
        <item name="android:textColorHint">@color/white_30</item>
        <item name="android:paddingStart">@dimen/dimen_12</item>
        <item name="android:paddingEnd">@dimen/dimen_12</item>
    </style>

    <style name="PrimaryButton" parent="N17SB">
        <item name="android:layout_height">@dimen/button_height_56</item>
        <item name="android:background">@drawable/bg_corner_10</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
